{
    "name": "gally/shopware-plugin",
    "description": "Shopware connector for Gally",
    "homepage": "https://elasticsuite.io",
    "type": "shopware-platform-plugin",
    "license": "OSL-3.0",
    "version": "2.1.0",
    "extra": {
        "shopware-plugin-class": "Gally\\ShopwarePlugin\\GallyPlugin",
        "author": "Gally Team",
        "label": {
            "en-GB": "Gally Plugin",
            "de-DE": "Gally Plugin"
        },
        "description": {
            "de-DE": "Gally Plugin f√ºr Shopware",
            "en-GB": "Gally Plugin for Shopware"
        }
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
        "gally/gally-php-rest-sdk": "2.1.0",
        "shopware/core": "^6.5.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "phpstan/phpstan": "^1.8",
        "shopware/storefront": "*",
        "friendsofphp/php-cs-fixer": "^3.41"
    },
    "autoload": {
        "psr-4": {
            "Gally\\ShopwarePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gally\\ShopwarePlugin\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true,
            "symfony/flex": false
        }
    }
}
