<sw-inherit-wrapper
    v-bind="wrapperAttrs"
    class="swag-paypal-setting"
    :class="wrapperClasses"
    :value="value"
    :inherited-value="inheritedValue"
    :custom-inheritation-check-function="customInheritationCheckFunction"
    :has-parent="hasParent"
    @update:value="setValue"
>
    <template #content="props">
        <slot
            name="content"
            v-bind="{
                ...props,
                disabled: props.isInherited || disabled,
                path: path,
            }"
        >
            <sw-switch-field
                v-if="type === 'boolean'"
                v-bind="formAttrs"
                :name="path"
                :disabled="props.isInherited || disabled"
                :value="props.currentValue"
                @update:value="props.updateCurrentValue"
            />

            <sw-single-select
                v-else-if="type === 'string' && formAttrs.hasOwnProperty('options')"
                v-bind="formAttrs"
                :name="path"
                :disabled="props.isInherited || disabled"
                :value="props.currentValue ?? null"
                @update:value="props.updateCurrentValue"
            >
                <template v-if="attrs.hasOwnProperty('hintText')" #hint>
                    {{ attrs.hintText }}
                </template>
            </sw-single-select>

            <sw-text-field
                v-else-if="type === 'string'"
                v-bind="formAttrs"
                :name="path"
                :disabled="props.isInherited || disabled"
                :value="props.currentValue"
                @update:value="props.updateCurrentValue"
            >
                <template v-if="attrs.hasOwnProperty('hintText')" #hint>
                    {{ attrs.hintText }}
                </template>
            </sw-text-field>
        </slot>
    </template>
</sw-inherit-wrapper>
